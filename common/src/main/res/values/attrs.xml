<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ScrollableViewPager">
        <attr name="canScroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="etv_read_more_max_lines" format="integer" />
        <attr name="etv_read_more_collapsed_text" format="string" />
        <attr name="etv_read_more_expand_text" format="string" />
        <attr name="etv_read_more_text_color" format="reference" />
    </declare-styleable>

    <declare-styleable name="StepsIndicatorView">
        <attr name="siv_totalProgressCount" format="integer" />
        <attr name="siv_height" format="integer" />
        <attr name="siv_progressCount" format="integer" />
        <attr name="siv_progressColor" format="color" />
        <attr name="siv_progressEmptyColor" format="color" />
        <attr name="siv_backgroundColor" format="color" />
    </declare-styleable>


    <declare-styleable name="CompoundNavigationButton">
        <attr name="navigationButtonLeftIcon" format="reference" />
        <attr name="navigationButtonLeftIconTint" format="reference" />
        <attr name="navigationButtonRightIcon" format="reference" />
        <attr name="navigationButtonRightIconTint" format="reference" />


        <attr name="navigationButtonTitle" format="string" />
        <attr name="navigationButtonTitleColor" format="reference" />
        <attr name="navigationButtonDescription" format="string" />
        <attr name="navigationButtonRightLabel" format="string" />
        <attr name="navigationButtonHasBottomDivider" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CommonMainToolbar">
        <attr name="toolbarCustomStyles" format="enum">
            <enum name="toolbarMainLargeStyle" value="0" />
            <enum name="toolbarMain" value="1" />
            <enum name="toolbarMainSubStyles" value="2" />
        </attr>
        <attr name="toolbarTitle" format="reference" />
        <attr name="toolbarTitleColor" format="reference" />
        <attr name="toolbarBackgroundColor" format="reference" />
        <attr name="toolbarMenu" format="reference" />
    </declare-styleable>

    <declare-styleable name="CommonSubToolbar" parent="CommonMainToolbar">
        <attr name="toolbarTitleCentered" format="boolean" />
        <attr name="toolbarNavigationIcon" format="reference" />
        <attr name="titleTextAppearance" format="reference" />


        <attr name="buttonText" format="reference" />
        <attr name="buttonTextColor" format="reference" />
        <attr name="buttonBackground" format="reference" />
        <attr name="buttonVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
            <enum name="invisible" value="2" />
        </attr>

    </declare-styleable>

    <!-- CUSTOM THEME ATTRIBUTES  -->

    <!--  region Variables  -->
    <attr name="colorPrimaryFull" format="color" />
    <attr name="colorPrimaryShade1" format="color" />
    <attr name="colorPrimaryShade2" format="color" />
    <attr name="colorPrimaryShade3" format="color" />
    <attr name="colorSecondaryFull" format="color" />

    <attr name="colorAlertWarning" format="color" />
    <attr name="colorAlertError" format="color" />
    <attr name="colorAlertSuccess" format="color" />

    <attr name="colorGreyInactive" format="color" />
    <attr name="colorGreyBorderDivider" format="color" />

    <attr name="colorBackground" format="color" />
    <attr name="colorSheet" format="color" />
    <attr name="colorField" format="color" />
    <attr name="colorOnLightRegular" format="color" />
    <attr name="colorTextTertiary" format="color" />
    <attr name="colorOnLightSecondary" format="color" />
    <attr name="colorOnLightTertiary" format="color" />

    <attr name="colorOnAlertError" format="color" /> <!-- Color to be used on top of color alert error -->
    <attr name="colorOnAlertWarning" format="color" /> <!-- Color to be used on top of color warning -->
    <attr name="colorOnAlertSuccess" format="color" /> <!-- Color to be used on top of color success -->

    <attr name="screenMargin" format="dimension" />
    <attr name="dividerSize" format="dimension" />

    <attr name="buttonsCapitalized" format="boolean" />
    <attr name="rippleColor" format="color" />

    <attr name="bottomNavigationViewStyle" format="reference" />

    <attr name="bottomSheetStyle" format="reference" />

    <attr name="buttonPrimaryStyle" format="reference" />
    <attr name="buttonSecondaryStyle" format="reference" />
    <attr name="buttonOutlinedStyle" format="reference" />
    <attr name="buttonTextStyle" format="reference" />
    <attr name="buttonTextToggleStyle" format="reference" />
    <attr name="buttonNavigationStyle" format="reference" />
    <attr name="buttonPrimaryBottomFullStyle" format="reference" />

    <attr name="imageViewRoundStyle" format="reference" />

    <attr name="textLargeTitleStyle" format="reference" />
    <attr name="textTitle1Style" format="reference" />
    <attr name="textTitle2Style" format="reference" />
    <attr name="textTitle3Style" format="reference" />
    <attr name="textHeadlineStyle" format="reference" />
    <attr name="textBodyStyle" format="reference" />
    <attr name="textBodyMediumStyle" format="reference" />
    <attr name="textCalloutStyle" format="reference" />
    <attr name="textSubheadlineStyle" format="reference" />
    <attr name="textSubheadlineMediumStyle" format="reference" />
    <attr name="textFootnoteStyle" format="reference" />
    <attr name="textCaptionStyle" format="reference" />
    <attr name="textCaptionSemiboldStyle" format="reference" />
    <attr name="textNavigationLabelStyle" format="reference" />

    <attr name="radiusButton" format="dimension" />
    <attr name="radiusCard" format="dimension" />
    <attr name="radiusBottomSheet" format="dimension" />
    <attr name="radiusInput" format="dimension" />

    <attr name="toolbarMainStyle" format="reference" />
    <attr name="toolbarMainLargeStyle" format="reference" />
    <attr name="toolbarSubStyle" format="reference" />

    <attr name="dialogDatePicker" format="reference" />
    <attr name="textInputEditTextFilledStyle" format="reference" />
    <attr name="textInputEditTextFilledBorderStyle" format="reference" />
    <attr name="textInputEditTextPrefixStyle" format="reference" />
    <attr name="textFootnoteLightStyle" format="reference" />
    <!--  endregion  -->
</resources>
